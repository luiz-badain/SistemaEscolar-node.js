<main>
    <div class="container text-center">
        <div class="row">
            <div class="col">
                <div class="card border-secondary mb-3">
                    <div class="card-header">
                        <ul class="nav nav-tabs card-header-tabs">
                            <li class="nav-item">
                                <a class="nav-link" href="/rota_aluno/aluno">Alunos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/rota_turma/turma">Turmas</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active">Editar Turma</a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-body">
                        <form action="/rota_turma/turma/editar_turma" method="POST">
                            {{#each turmas}}


                            <div class="input-group mb-3">
                                <span class="input-group-text" id="inputGroup-sizing-default"  for="id_turma">ID: </span>
                                <input type="text" name="id_turma" class="form-control" aria-label="Sizing example input"
                                    aria-describedby="inputGroup-sizing-default" value="{{id_turma}}">
                            </div>

                            <div class="input-group mb-3">
                                <span class="input-group-text" id="inputGroup-sizing-default"  for="descricao">Descrição: </span>
                                <input type="text" id="descricao" name="descricao" class="form-control" aria-label="Sizing example input"
                                    aria-describedby="inputGroup-sizing-default" value="{{descricao}}" required>
                            </div>

                            <button type="submit" class="btn btn-success">Editar turma</button>
                            {{/each}}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>