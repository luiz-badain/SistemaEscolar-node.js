<main>
    <div class="container text-center">
        <div class="row">
            <div class="col">
                <div class="card border-secondary mb-3">
                    <div class="card-header">

                        <ul class="nav nav-tabs card-header-tabs">
                            <li class="nav-item">
                                <a class="nav-link" href="/rota_aluno/aluno" >Alunos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active">Turmas</a>
                            </li>
                        </ul>

                    </div>
                    <div class="row">
                        <div class="col-sm-5 col-md-6 header-cad"> <a href="/rota_turma/turma/add"
                                class="btn btn-success"><i class="bi bi-plus"></i> Cadastrar Turma</a> </div>
                        <div class="col-sm-5 offset-sm-2 col-md-6 offset-md-0"></div>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"></h5>
                        <p class="card-text"></p>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Log</th>
                                    <th scope="col">Nome</th>
                                    <th scope="col">Editar</th>
                                    <th scope="col">Excluir</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each turmas}}
                                <tr>

                                    <th scope="row">{{id_turma}}</th>
                                    <td>{{createdAt}}</td>
                                    <td>{{descricao}}</td>
                                    <td><a href="/rota_turma/editar_turma/{{id_turma}}" class="btn btn-primary"><i
                                                class="bi bi-pencil-square"></i> Editar</a></td>
                                    <td><a href="/rota_turma/deletar_turma/{{id_turma}}" class="btn btn-danger"><i
                                                class="bi bi-trash"></i> Deletar</a></td>
                                </tr>
                                {{/each}}
                            </tbody>
                            <!--tfoot>
                                
                                <tr>
                                    <th scope="row">Quantidade de Turmas cadastradas: </th>
                                    <td>Mark</td>
                                </tr>
                            </tfoot-->
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>